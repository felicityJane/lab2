@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Super Fancy Book Store</h2>

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active" style="width: 400px; margin: 0 auto">
            <img src="~/images/banner1.jpg" alt="Super Fancy Book Store" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>

                    “A room without books is like a body without a soul.”
                    ― Marcus Tullius Cicero
                </p>
            </div>
        </div>
        <div class="item" style="width: 400px; height: 200px; margin: 0 auto">
            <img src="~/images/banner2.jpg" alt="Super Fancy Book Store" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>

                    “I have always imagined that Paradise will be a kind of library.”
                    ― Jorge Luis Borges
                </p>
            </div>
        </div>
        <div class="item" style="width: 400px; height: 200px; margin: 0 auto">
            <img src="~/images/banner3.jpg" alt="Super Fancy Book Store" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    “There is no friend as loyal as a book.”
                    ― Ernest Hemingway
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div>
    <form asp-controller="Books" asp-action="Index" method="get">
        <p>
            Book Name: <input type="text" name="SearchString" />
            <input type="submit" value="Search" />
        </p>

    </form>
</div>

<div>
    <form asp-controller="Authors" asp-action="Index" method="get">
        <p>
            Author Name: <input type="text" name="SearchString" />
            <input type="submit" value="Search" />
        </p>

    </form>
</div>
